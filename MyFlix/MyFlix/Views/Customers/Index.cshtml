@model IEnumerable<MyFlix.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Membership Type
                </th>
                <th colspan="1">
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.Name, "Details", "Customers", new {id = customer.ID },null)
                    </td>
                    <td>
                        @customer.MembershipType.Name
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.ID }, null) &nbsp;
                        @Html.ActionLink("Remove", "Remove", "Customers", new { id = customer.ID }, null)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    @using (Html.BeginForm("New", "Customers"))
                    {
                        <button type="submit" class="btn btn-primary">Add new customer</button>
                    }
                </td>
            </tr>
        </tbody>

    </table>
}
else
{
    <text> No customers available!</text>
}