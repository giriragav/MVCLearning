@model IEnumerable<MyFlix.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie List</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr> <td>  <text>@movie.Name</text></td></tr>
            }
        </tbody>
    </table>
}
else
{
    <text> No movies available!</text>
}
