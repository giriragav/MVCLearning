@model IEnumerable<MyFlix.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genre</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr> 
                    <td> @Html.ActionLink(movie.Name,"Details","Movies",new { id = movie.ID },null)</td>
                    <td> @movie.Genre.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.ID }, null) &nbsp;
                        @Html.ActionLink("Remove", "Remove", "Movies", new { id = movie.ID }, null)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    @using (Html.BeginForm("New", "Movies"))
                    {
                        <button type="submit" class="btn btn-primary">Add new movie</button>
                    }
                </td>
            </tr>
        </tbody>
    </table>
}
else
{
    <text> No movies available!</text>
}
